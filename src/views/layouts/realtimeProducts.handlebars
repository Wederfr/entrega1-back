<h1>Lista de Produtos em Tempo Real</h1>

<ul id="productList">
  {{#each products}}
    <li>ID: {{id}} | {{title}} - R$ {{price}}</li>
  {{/each}}
</ul>

<h2>Adicionar Produto</h2>
<form id="addForm">
  <input type="text" id="title" placeholder="Título" required />
  <input type="text" id="description" placeholder="Descrição" required />
  <input type="number" id="price" placeholder="Preço" required />
  <input type="text" id="thumbnail" placeholder="Thumbnail" required />
  <input type="text" id="code" placeholder="Código" required />
  <input type="number" id="stock" placeholder="Estoque" required />
  <button type="submit">Adicionar</button>
</form>

<h2>Deletar Produto</h2>
<form id="deleteForm">
  <input type="number" id="deleteId" placeholder="ID do produto" required />
  <button type="submit">Deletar</button>
</form>

<script src="/js/realtime.js"></script>